<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="My Account"
             x:Class="MobileClient.Views.AccountPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="ic_action_info_outline.png" 
                     Activated="ToolbarItem_Activated" />
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <ScrollView>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition x:Name="EmailHeader" Height="*" />
                    <RowDefinition x:Name="EmailLabelRow" Height="*" />
                    <RowDefinition x:Name="SignOutButton" Height="*" />
                    <RowDefinition x:Name="Pad1" Height="30" />
                    <RowDefinition x:Name="SubscriptionHeaderRow" Height="*" />
                    <RowDefinition x:Name="SubscriptionLabelRow" Height="*" />
                    <RowDefinition x:Name="PurchaseButtonRow" Height="*" />
                    <RowDefinition x:Name="Pad2" Height="30" />
                    <RowDefinition x:Name="FeedbackHeaderRow" Height="*" />
                    <RowDefinition x:Name="FeedbackLabelRow" Height="*" />
                    <RowDefinition x:Name="FeedbackButtonRow" Height="*" />
                </Grid.RowDefinitions>
                <Label x:Name="EmailTitleLabel"
                   Text="Account Information"
                   Grid.Row="0"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Grid.Column="0"
                   VerticalOptions="End"
                   HorizontalOptions="StartAndExpand" />
                <Label x:Name="EmailLabel"
                            FontSize="Small"
                            Grid.Row="1"
                            Grid.Column="0"
                            VerticalOptions="Start" 
                            HorizontalOptions="StartAndExpand" />
                <Button x:Name="LogoutButton"
                        Text="Sign Out"
                        Grid.Row="2"
                        Grid.Column="0"
                        WidthRequest="250"
                        StyleClass="Danger"
                        VerticalOptions="Start"
                        HorizontalOptions="CenterAndExpand" />
                <Label x:Name="SubscriptionHeaderLabel"
                   Text="Subscription"
                   Grid.Row="4"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   Grid.Column="0"
                   VerticalOptions="End"
                   HorizontalOptions="StartAndExpand" />
                <Label x:Name="SubscriptionLabel" 
                       Text="Purchase a monthly subscription that fits your needs."
                       FontSize="Small"
                       Grid.Row="5"
                       Grid.Column="0"
                       VerticalOptions="Start"
                       HorizontalOptions="StartAndExpand" />
                <Button x:Name="SubscribeButton"
                       Text="Purchase"
                       Grid.Row="6"
                       Grid.Column="0"
                       WidthRequest="250"
                       StyleClass="Success"
                       VerticalOptions="Start"
                       HorizontalOptions="CenterAndExpand" />
                <Label x:Name="FeedbackHeaderLabel"
                   Text="Feedback"
                   Grid.Row="8"
                   Grid.Column="0"
                   FontSize="Medium"
                   FontAttributes="Bold"
                   VerticalOptions="End"
                   HorizontalOptions="StartAndExpand" />
                <Label x:Name="FeedbackInfoLabel"
                    Text="Send us your feedback"
                    Grid.Row="9"
                    Grid.Column="0"
                    FontSize="Small"
                    VerticalOptions="Start"
                    HorizontalOptions="StartAndExpand" />
                <Button x:Name="FeedbackButton"
                    Text="Send Feedback"
                    Grid.Row="10"
                    Grid.Column="0"
                    StyleClass="Info"
                    WidthRequest="250"
                    HorizontalOptions="CenterAndExpand"
                    VerticalOptions="Start" />
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>