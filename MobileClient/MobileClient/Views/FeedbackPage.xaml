<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Send Feedback"
             xmlns:mobileclient="clr-namespace:MobileClient"
             x:Class="MobileClient.Views.FeedbackPage">
    <ContentPage.Content>
        <StackLayout>
            <mobileclient:BorderlessEntry x:Name="FeedbackEditor"
                FontSize="Medium"
                Margin="10"
                WidthRequest="300"
                HeightRequest="200"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="SubmitButton" Margin="10"
                Text="Submit"
                WidthRequest="250"
                StyleClass="Info"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>