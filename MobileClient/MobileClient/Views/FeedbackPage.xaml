<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:mobileclient="clr-namespace:MobileClient"
             x:Class="MobileClient.Views.FeedbackPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Submit Feedback"
                FontAttributes="Bold"
                FontSize="Large"
                TextDecorations="Underline"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />
        <mobileclient:BorderlessEntry x:Name="FeedbackEditor"
                FontSize="Small"
                Margin="10"
                WidthRequest="300"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
            <Button x:Name="SubmitButton" Margin="10"
                Text="Submit Feedback"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>