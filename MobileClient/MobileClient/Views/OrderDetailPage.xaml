<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MobileClient.Views.OrderDetailPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label x:Name="OrderId"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
                <Image x:Name="TopImage"
                    VerticalOptions="Center"
                    HorizontalOptions="CenterAndExpand" >
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer x:Name="ImageGR"
                            NumberOfTapsRequired="1" />
                    </Image.GestureRecognizers>
                </Image>
                <Label x:Name="Address"
                VerticalOptions="Center" 
                HorizontalOptions="Start" />
                <StackLayout
                    Orientation="Horizontal">
                    <Label x:Name="Pitch"
                       Text="Predominant Pitch: "
                       VerticalOptions="Center"
                       HorizontalOptions="Start" />
                    <Stepper x:Name="PitchStepper"
                        Minimum="0"
                        Maximum="25"/>
                </StackLayout>
                <Label x:Name="Area"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start" />
                <Label x:Name="Squares"
                    VerticalOptions="Center" 
                    HorizontalOptions="Start" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>